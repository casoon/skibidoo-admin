---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="flex h-16 items-center justify-between border-b bg-white px-6">
  <h1 class="text-xl font-semibold text-gray-800">{title}</h1>

  <div class="flex items-center gap-4" x-data>
    <span class="text-sm text-gray-600" x-text="$store.auth.user?.name || 'Admin'"></span>
    <button
      @click="$store.auth.logout()"
      class="rounded-lg bg-gray-100 px-3 py-2 text-sm text-gray-700 hover:bg-gray-200"
    >
      Abmelden
    </button>
  </div>
</header>
